= form_for @team, url: (@team.new_record? ? admin_teams_path : admin_team_path(@team)), html: {class: 'pure-form pure-form-aligned'} do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .pure-control-group
      = f.label :name
      = f.text_field :name, required: true
    .pure-control-group
      = f.label :password
      = f.text_field :password, value: ''
    .pure-controls
      = f.submit 'Save', class: 'pure-button pure-button-primary'
