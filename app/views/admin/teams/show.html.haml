.header
  %h1= @team.name

.content
  %section
    %h1 Basic Data
    %dl
      %dt Point
      %dd= @team.point
      %dt Created at
      %dd= @team.created_at

  %section
    %h1 Members
    %table.pure-table
      %thead
        %tr
          %th ID
          %th Name
          %th Point
      %tbody
        - @team.players.each do |player|
          %tr
            %td= player.id
            %td= link_to player.name, admin_player_path(player)
            %td= player.point

  = link_to 'Edit', edit_admin_team_path(@team)
  \|
  = link_to 'Back', admin_teams_path
