= form_for @team, html: { class: 'pure-form pure-form-aligned' } do |f|
  - if @team.errors.any?
    #error_explanation
      %h2= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"
      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  %fieldset
    .pure-control-group
      = f.label :name
      = f.text_field :name, required: true
    .pure-control-group
      = f.label :password
      = f.password_field :password, required: true
    %small REMEMBER THE PASSWORD! If you forget this, the member of this team (includes you, of course) cannot sign up with this team.
    .pure-controls
      = f.submit 'Register', class: 'pure-button pure-button-primary'
