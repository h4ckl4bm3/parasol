!!!
%html
  %head
    %title= Setting.ctf_name
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Open+Sans:400,300'
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = csrf_meta_tags
    :javascript
      hljs.initHighlightingOnLoad();
  %body
    #layout
      %a#menuLink.menu-link{href: '#menu'}
      #menu
        .pure-menu.pure-menu-open
          = link_to Setting.ctf_name, root_path, class: 'pure-menu-heading'
          %ul
            %li= link_to 'Announcements', posts_path
            %li= link_to 'Rules', rules_path
          - if player_signed_in?
            %ul
              %li= link_to 'Challenges', challenges_path
              %li
                %a Ranking
              %li= link_to 'Sign out', destroy_player_session_path, method: :delete
          - else
            %ul
              %li= link_to 'Sign up', new_player_registration_path
              %li= link_to 'Sign in', new_player_session_path
              %li= link_to 'Team Registration', new_team_path
          - if admin_signed_in?
            = link_to 'Admin', admin_path, class: 'pure-menu-heading'
            %ul
              %li= link_to 'Challenges', admin_challenges_path
              %li= link_to 'Players', admin_players_path
              %li= link_to 'Teams', admin_teams_path
              %li= link_to 'Posts', admin_posts_path
              %li= link_to 'Settings', admin_settings_path
      #main
        - if player_signed_in?
          .pure-menu.pure-menu-open.pure-menu-horizontal
            %ul
              %li
                %a= current_player.name
              %li
                %a (#{current_player.team.name})
              %li
                %a #{current_player.team.point} pt.
        - [:notice, :alert].each do |klass|
          - if flash[klass].present?
            %div{class: "flash #{klass}"}
              = flash[klass]
        = yield
